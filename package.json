    "author": "David Greenland",
    "license": "ISC",
    "dependencies": {
        "@types/stripe": "^8.0.416",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "envalid": "^8.0.0",
        "express": "^4.19.2",
        "jsdom": "^24.1.1",
        "nock": "^13.5.4",
        "stripe": "^16.5.0",
        "supertest": "^7.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.46.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@types/ejs": "^3.1.5",
        "@types/express": "^4.17.21",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.0.2",
        "@types/shelljs": "^0.8.15",
        "@types/supertest": "^6.0.2",
        "fs-extra": "^10.1.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "shelljs": "^0.8.5",
        "start-server-and-test": "^2.0.5",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    }
